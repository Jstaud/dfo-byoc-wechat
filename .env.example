# DFO BYOC WeChat Integration - Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# BYOC OAuth Settings (Required)
# =============================================================================
# Client credentials for BYOC authentication
# These are provided by CXone when setting up the BYOC integration
CLIENT_ID=your_cxone_client_id_here
CLIENT_SECRET=your_cxone_client_secret_here

# JWT secret key for signing tokens
# Generate a secure random string (e.g., openssl rand -hex 32)
# This should be kept secret and rotated periodically
JWT_SECRET=your_secure_random_jwt_secret_key_here

# Server port (default: 3000)
PORT=3000

# =============================================================================
# WeChat Service Account Settings (Required)
# =============================================================================
# WeChat Official Account AppID
# Found in: WeChat Official Account Platform > Development > Basic Configuration
WECHAT_APPID=your_wechat_appid_here

# WeChat Official Account AppSecret
# Found in: WeChat Official Account Platform > Development > Basic Configuration
WECHAT_APPSECRET=your_wechat_appsecret_here

# WeChat webhook token for signature validation
# This is the token you configure in WeChat webhook settings
# Should match the token configured in WeChat admin panel
WECHAT_TOKEN=your_wechat_webhook_token_here

# WeChat Encoding AES Key (Optional)
# Only required if using encrypted messages
# Found in: WeChat Official Account Platform > Development > Basic Configuration
# Leave empty if not using encryption
WECHAT_ENCODING_AES_KEY=

# =============================================================================
# CXone Digital Engagement Settings (Required)
# =============================================================================
# Base URL for CXone Digital Engagement API
# Example: https://api.nice-incontact.com
# Or for sandbox: https://api-sandbox.nice-incontact.com
CXONE_BASE_URL=https://api.nice-incontact.com

# Bearer token for CXone API authentication
# This is obtained through CXone OAuth flow
# See: https://developer.niceincontact.com/Documentation/GettingStarted
CXONE_BEARER_TOKEN=your_cxone_bearer_token_here

# Channel ID in CXone Digital Engagement
# This is the channel ID created in your CXone integration
CXONE_CHANNEL_ID=your_cxone_channel_id_here

# =============================================================================
# Mock Mode Settings (Optional - for testing)
# =============================================================================
# Enable mock mode to test without real API connectivity
# Set to true to use mock implementations (logs instead of API calls)
# Default: false
MOCK_MODE=false

# Mock server ports (only used if MOCK_MODE=true)
MOCK_CXONE_PORT=8001
MOCK_WECHAT_PORT=8002

# =============================================================================
# Logging Settings (Optional)
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO

# Enable JSON log output (recommended for production)
# Set to true for structured JSON logs, false for human-readable logs
# Default: false
JSON_LOGS=false

# =============================================================================
# HTTP Client Settings (Optional)
# =============================================================================
# HTTP request timeout in seconds
# Default: 30
HTTP_TIMEOUT=30

# Maximum retry attempts for failed requests
# Default: 3
HTTP_MAX_RETRIES=3

# =============================================================================
# Example: Mock Mode Configuration
# =============================================================================
# For local development/testing without real APIs, use these values:
#
# MOCK_MODE=true
# CLIENT_ID=test_client_id
# CLIENT_SECRET=test_client_secret
# JWT_SECRET=test_jwt_secret_key
# PORT=3000
# WECHAT_APPID=test_wechat_appid
# WECHAT_APPSECRET=test_wechat_secret
# WECHAT_TOKEN=test_wechat_token
# WECHAT_ENCODING_AES_KEY=
# CXONE_BASE_URL=http://localhost:8001
# CXONE_BEARER_TOKEN=test_cxone_token
# CXONE_CHANNEL_ID=test_channel_id
# LOG_LEVEL=DEBUG
# JSON_LOGS=false
